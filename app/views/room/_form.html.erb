<%= form_with(url: "#", method: "get") do %>
  <div class="form-group">
    <%= label_tag :title, '방 제목' %>
    <%= text_field_tag :title, nil, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= label_tag :question, '문제 정보' %>
    <%= select_tag(:question, raw('<option value="1">인싸감성! 아이돌 노래 모음</option><option value="2">그땐 그랬지~ 추억의 투니버스 애니메이션 OST모음</option><option value="3">그시절 우리가 좋아했던 온라인 게임 OST</option>'), class: "form-control") %>
  </div>

  <div class="form-group row">
    <div class="col-sm-6">
      <%= label_tag :count, '문제 수' %>
      <%= number_field_tag :count, 30, class:"form-control"%>
    </div>
<!--    <div class="col-sm-6">-->
      <%#= label_tag :count2, '문제 수' %>
      <%#= number_field_tag :count2, 30, class:"form-control"%>
<!--    </div>-->
  </div>

  <div class="form-group">
    <div class="custom-control custom-switch">
      <%= check_box_tag :isSecret, :secret, false, class: "custom-control-input"%>
      <%= label_tag :isSecret, '방을 비밀방으로 만듭니다', class:"custom-control-label" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, '비밀번호' %>
    <%= password_field_tag :password, nil, class:"form-control", disabled: true%>
  </div>

  <div class="form-group">
    <%= submit_tag "생성", class:"btn btn-secondary float-right" %>
  </div>
<% end %>