<%= form_with(model: @room, local: true) do  |form| %>

  <div class="form-group">
    <%= form.label :title, t('rooms.form.text1') %>
    <%= form.text_field :title, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :question, t('rooms.form.text2') %>
    <%= collection_select :room, :question, Question.all, :id, :title, {}, html_options={class: "form-control"} %>
  </div>

  <div class="form-group row">
    <div class="col-sm-6">
      <%= form.label :count, t('rooms.form.text3') %>
      <%= form.number_field :questionNumber, value:15, max:30, min:5, class:"form-control"%>
    </div>
    <div class="col-sm-6">
      <%= label_tag :limitTime, t('rooms.form.text4') %>
      <%= form.number_field :limitTime, value: 60, max:300, min:20, class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <div class="custom-control custom-switch">
      <%= form.check_box :isSecret, class: "custom-control-input"%>
      <%= form.label :isSecret, t('rooms.form.text5'),id: :isSecret, onclick: "openPass()", class:"custom-control-label" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password, t('rooms.form.text6') %>
    <%= form.password_field :password, class:"form-control", disabled: true%>
  </div>

  <div class="form-group">
    <%= form.submit t('rooms.form.text7'), class:"btn btn-secondary float-right margin-10", data: { turbolinks: false } %>
  </div>

  <div class="form-group">
    <%= form.submit t('rooms.form.text8'), class:"btn btn-outline-secondary float-left margin-10" %>
  </div>
<% end %>