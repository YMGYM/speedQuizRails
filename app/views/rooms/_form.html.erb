<%= form_with(model: @room, scope: :room) do  |form| %>
  <div class="form-group">
    <%= form.label :title, '방 제목' %>
    <%= form.text_field :title, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :question, '문제 정보' %>
    <%= collection_select :room, :question, Question.all, :id, :title, {}, html_options={class: "form-control"} %>
  </div>

  <div class="form-group row">
    <div class="col-sm-6">
      <%= form.label :count, '문제 수' %>
      <%= form.number_field :questionNumber, value: 30, class:"form-control"%>
    </div>
    <div class="col-sm-6">
      <%= label_tag :limitTime, '제한 시간(초)' %>
      <%= form.number_field :limitTime, value: 60, class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <div class="custom-control custom-switch">
      <%= form.check_box :isSecret, class: "custom-control-input"%>
      <%= form.label :isSecret, '방을 비밀방으로 만듭니다', class:"custom-control-label" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password, '비밀번호' %>
    <%= form.password_field :password, class:"form-control", disabled: true%>
  </div>

  <div class="form-group">
    <%= form.submit "생성", class:"btn btn-secondary float-right margin-10" %>
  </div>

  <div class="form-group">
    <%= form.submit "뒤로", class:"btn btn-outline-secondary float-left margin-10" %>
  </div>
<% end %>