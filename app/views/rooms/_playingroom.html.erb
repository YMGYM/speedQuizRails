
<div class="row" style="height: 50px"></div>
<h1>#<%= @room.id %> / <%= @room.title %></h1>
<p><%= Question.find(@room.question).title %></p>
<p>문제 수 : <%= @room.questionNumber %></p>
<p>제한시간 : <%= @room.limitTime %></p>
<hr>
<button id="unmuteButton" class="form-control btn btn" >소리가 나오지 않는다면 이곳을 눌러주세요(다시재생 포함)</button>
<br />
<hr>
<div class="container overflow-auto" style="height: 300px">
  <div id="messages" class="alert alert-secondary" role="alert" style="text-decoration: underline;">

  </div>
</div>
<div class="margin-s10"></div>

<form>
  <div class="form-group">
    <input type="text" id="text" class="form-control form-control-lg margin-top-10"  placeholder="이곳에 채팅을 입력하세요">
  </div>
  <button type="button" value="send" onclick="send();" class="form-control btn btn-dark">전송</button>
</form>

<div class="row">
  <% @room.players.each do |player| %>
    <div class="col-sm-4 margin-top-10">
      <div class="card border-info overflow-auto">
        <div class="card-body">
          <h5 class="card-title"><%= player.user.nickName %></h5>
          <p class="card-text float-right">1 points</p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div hidden>
  <div id="player"></div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script>
    // 2. This code loads the IFrame Player API code asynchronously.
    var tag = document.createElement('script');

    tag.src = "https://www.youtube.com/iframe_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

    // 3. This function creates an <iframe> (and YouTube player)
    //    after the API code downloads.
    var player;
    var nowSong;

    function onYouTubeIframeAPIReady() {
        player = new YT.Player('player', {
            height: '360',
            width: '640',
            //videoId: 'VNNsrjm6Nig', // 여기하고
            videoId: `${nowSong}`,
            playerVars: {
                'start': 10, // 여기 수정

                // 무한반복용 루프 설정도구. 복잡해서 뺐음
                'loop' : 1,
                //'playlist': 'VNNsrjm6Nig'
                'playlist': `${nowSong}`
            },
            events: {
                'onReady': onPlayerReady,
                'onStateChange': onPlayerStateChange,
            }
        });
    }



    // 4. The API will call this function when the video player is ready.
    function onPlayerReady(event) {
        event.target.mute();
        event.target.playVideo();

    }

    // 5. The API calls this function when the player's state changes.
    //    The function indicates that when playing a video (state=1),
    //    the player should play for six seconds and then stop.
    function onPlayerStateChange(event) {
        setTimeout(stopVideo, 3000);
    }
    function stopVideo() {
        player.unMute();
    }

    unmuteButton.addEventListener('click', function() {
        player.playVideo();
    });

    // Socket

    var socket = io.connect("http://localhost:4000");
    //var userInfo = "<%=current_user.email%>";
    var nick = "<%=current_user.nickName%>"

    function send() {
      var value = document.getElementById("text").value;
      socket.emit("sendUser", {
        //email: userInfo,
        value: value,
        score: 0,
        nick: nick
      });
    }

    socket.on("userInfo", (data) => {
      var messages = document.getElementById("messages");
      var text = document.createTextNode(`${data.nick} : ${data.value}`);
      messages.appendChild(text);
      messages.appendChild(document.createElement("br"));

      if(data.flag === true){
        var index = queArr.findIndex(i => i.src == nowSong);
        setTimeout(() => {
          player.loadVideoById(queArr[index+1].src);
        }, 4000);


        messages.appendChild(document.createTextNode(`${data.email}님 정답입니다!`));
        messages.appendChild(document.createElement("br"));
        setTimeout(() => {
          messages.appendChild(document.createTextNode(`[시스템메시지] : 3초 뒤에 시작됩니다.`));
          messages.appendChild(document.createElement("br"));
        }, 1000);

        setTimeout(() => {
          messages.appendChild(document.createTextNode(`[시스템메시지] : 2초 뒤에 시작됩니다.`));
          messages.appendChild(document.createElement("br"));
        }, 2000);
        setTimeout(() => {
          messages.appendChild(document.createTextNode(`[시스템메시지] : 1초 뒤에 시작됩니다.`));
          messages.appendChild(document.createElement("br"));
        }, 3000);
      }
    });

    socket.on('answer', (data) => {
      queArr = data.queArr;
      nowSong = data.queArr[0].src;
      //1번만 발생

      setTimeout(() => {
        messages.appendChild(document.createTextNode(`[시스템메시지] : 3초 뒤에 시작됩니다.`));
        messages.appendChild(document.createElement("br"));
      }, 1000);

      setTimeout(() => {
        messages.appendChild(document.createTextNode(`[시스템메시지] : 2초 뒤에 시작됩니다.`));
        messages.appendChild(document.createElement("br"));
      }, 2000);
      setTimeout(() => {
        messages.appendChild(document.createTextNode(`[시스템메시지] : 1초 뒤에 시작됩니다.`));
        messages.appendChild(document.createElement("br"));
      }, 3000);
    });
</script>
